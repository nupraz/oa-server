[

  {
    "path":"/manage",
    "alwaysShow":true,
    "component":"Layout",
    "meta":{
      "title":"系统管理",
      "icon":"manage"
    },
    "children":[
      {
        "path":"posts",
        "component":"manage/post",
        "name":"ListPost",
        "meta":{
          "title":"岗位管理"
        },
        "authority": {
          "operates":  [
            {
              "name":"create",
              "label":"新增",
              "urls":[
                "POST:/api/postInfos"
              ]
            },
            {
              "name":"modify",
              "label":"修改",
              "urls":[
                "PUT:/api/postInfos"
              ]
            },
            {
              "name":"remove",
              "label":"删除",
              "urls":[
                "DELETE:/api/postInfos/{codes}"
              ]
            }
          ]
        }
      },
      {
        "path":"departments",
        "component":"manage/department",
        "name":"ListDepartment",
        "meta":{
          "title":"部门管理"
        },
        "authority": {
          "operates":[
            {
              "name":"createone",
              "label":"新增顶级部门",
              "urls":[
                "POST:/api/departments"
              ]
            },
            {
              "name":"createtwo",
              "label":"新增二级部门",
              "urls":[
                "POST:/api/departments"
              ]
            },
            {
              "name":"modify",
              "label":"修改",
              "urls":[
                "PUT:/api/departments"
              ]
            },
            {
              "name":"remove",
              "label":"删除",
              "urls":[
                "DELETE:/api/departments/{ids}"
              ]
            }
          ]
        }
      },
      {
        "path":"employees",
        "component":"manage/employee",
        "name":"ListEmployee",
        "meta":{
          "title":"人员管理"
        }
      }
    ]
  },
  {
    "path":"/authority",
    "alwaysShow":true,
    "component":"Layout",
    "meta":{
      "title":"${authority}",
      "icon":"authority"
    },
    "children":[
      {
        "path":"routers",
        "component":"authority/router",
        "name":"ListRouter",
        "hidden":true,
        "meta":{
          "title":"路由一览"
        }
      },
      {
        "path":"users",
        "component":"authority/user",
        "name":"ListUser",
        "meta":{
          "title":"用户管理"
        }
      },
      {
        "path":"roles",
        "component":"authority/role",
        "name":"ListRole",
        "meta": {
          "title": "角色维护"
        },
        "authority": {
          "operates":[
            {
              "name":"grant",
              "label":"授权",
              "urls":[
                "GET:/api/roles/{id}/routes",
                "POST:/api/roles/{id}/routes"
              ]
            },
            {
              "name":"create",
              "label":"新增",
              "urls":[
                "POST:/api/roles"
              ]
            },
            {
              "name":"modify",
              "label":"修改",
              "urls":[
                "PUT:/api/roles"
              ]
            },
            {
              "name":"remove",
              "label":"删除",
              "urls":[
                "DELETE:/api/roles/{ids}"
              ]
            }
          ]
        }
      }
    ]
  },
  {
    "path": "/restaurant",
    "alwaysShow": true,
    "component": "Layout",
    "meta": {
      "title": "订餐管理",
      "icon": "restaurant"
    },
    "children": [
      {
        "path": "restaurantManage",
        "component": "restaurant/restaurantManage",
        "name": "RestaurantManage",
        "meta": {
          "title": "餐厅管理"
        },
        "authority": {
          "operates": [
            {
              "name": "startOrder",
              "label": "发起订餐",
              "urls": [
                "POST:/api/orderInfo"
              ]
            },
            {
              "name": "cancelOrder",
              "label": "取消订餐",
              "urls": [
                "DELETE:/api/orderInfo"
              ]
            },
            {
              "name": "add",
              "label": "新增",
              "urls": [
                "POST:/api/restaurantInfo"
              ]
            },
            {
              "name": "modify",
              "label": "修改",
              "urls": [
                "PUT:/api/restaurantInfo"
              ]
            },
            {
              "name": "remove",
              "label": "删除",
              "urls": [
                "DELETE:/api/restaurantInfo"
              ]
            }
          ]
        }
      }
    ]
  },
  {
    "path": "/mine",
    "alwaysShow": true,
    "component": "Layout",
    "meta": {
      "title": "我的任务",
      "icon": "mine"
    },
    "children": [
      {
        "path": "empOrderManage",
        "component": "mine/empOrderManage",
        "name": "EmpOrderManage",
        "meta": {
          "title": "员工订餐",
          "noCache":"true"
        },
        "authority": {
          "operates": [
            {
              "name": "add",
              "label": "新增",
              "urls": [
                "POST:/api/empOrderInfo"
              ]
            },
            {
              "name": "modify",
              "label": "修改",
              "urls": [
                "PUT:/api/empOrderInfo"
              ]
            },
            {
              "name": "remove",
              "label": "删除",
              "urls": [
                "DELETE:/api/empOrderInfo"
              ]
            },
            {
              "name": "export",
              "label": "导出数据",
              "urls": [
                "POST:/api/empOrderInfo/exportOrdersExcel"
              ]
            }
          ]
        }
      }
    ]
  }
]
